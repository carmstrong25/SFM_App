@model MVCEmail.Models.ContactFormModel

<!-- ========== GOOGLE MAP ========== -->
    <div id="mapwrap">
        <iframe height="450" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                src="https://www.google.com/maps/embed/v1/view?zoom=10&center=53.5444,-113.4909&key=AIzaSyBLai5qRbKlyrjjQL0yBZZB08ddRb4Bpd4"></iframe>
    </div>
    <!-- /GOOGLE MAP -->
@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()
    
    <!-- ========== CONTACT FORM ========== -->
    <div class="container">
        <div class="row sinfo">
            <div class="col-lg-4">
                <h4>Our Information</h4>
                <br>
                <div class="cinfo">
                    <img src="~/Images/icons/mail.svg" alt="">
                </div>
                <p>
                    colby.armstrong@signalfyre.ca<br />
                    connor.england@signalfyre.ca
                </p>
                <hr>
                <div class="cinfo">
                    <img src="~/Images/icons/android.svg" alt="">
                </div>
                <p>
                    +1 780-231-8398<br />
                </p>
                <hr>
            </div>

            <div class="col-lg-8">
                <h4>Need To Contact Us?</h4>
                <br>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-wide btn-primary" value="Send" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /CONTACT FORM -->
}